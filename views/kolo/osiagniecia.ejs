<% include ../partials/header %>
<% include ../partials/dzialalnosc/photolist %>







<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-9 text-center"><h3 class="header-content mt-5"> Nasze osiągnięcia </h3></div>
	</div>
	<div class="row mt-3">

<% include ../partials/leftmenu %>		
		
		<div class="col-md-9 main-display">
			
			<div class="content">
			    <% for(var i=achievements.length-1; i>0; i--){%>
				    <div class="row mt-5">
				       <div class="image col-lg-3">
				       	<div>
				       		<img src="<%=achievements[i].img%>">
				       	</div>
				       	<div class="extra">
	        			        <span><strong><%=achievements[i].date%></strong></span>
	        			</div>
    
	    			   </div>
	    			    <div class="achievement col-lg-9">
	        			    <div class="title">
	        			        <p class='lead'><%=achievements[i].title%></p>
	        			    </div>
	        			    
	        			    <div class="description">
	        			        <p><%-achievements[i].content.substring(0,230)%>...</p>
	        			    </div>
	
	        			    <a href="/kolo/osiagniecia/<%=achievements[i]._id%>" class="mb-3 btn btn-primary btn-md">Czytaj więcej</a>
	    			    </div> 
				    </div>			    
			    <% }%>
			</div>
		</div>
	</div>
</div>


