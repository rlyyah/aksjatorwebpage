<% include ../partials/bootstrap %>



<div class="container">
        <div class="row ">
            <div class="col-12 text-center">
                <h2>Edytuj OSIAGNIĘCIE</h2>
            </div>
        </div>
        <div class="row">
            <div class="form-styler mt-3">
                <form action="/kolo/osiagniecia/<%=achievements._id%>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="achievement[title]" value="<%=achievements.title%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="achievement[img]" value="<%=achievements.img%>">
                    </div>
                    <div class="form-group">
                        <textarea name="achievement[content]" rows="25" class="form-control"><%=achievements.content%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Zatwierdź</button>
                    </div>
                </form>
            </div>
            
        </div>
        <div class="row">
            <a href="/kolo/osiagniecia">Powrót</a>
        </div>
    
</div>