<% include ../../partials/bootstrap %>



<div class="container">
        <div class="row ">
            <div class="col-12 text-center">
                <h2>Edytuj Aktualnosc</h2>
            </div>
        </div>
        <div class="row">
            <div class="form-styler mt-3">
                <form action="/edit/aktualnosci/<%=news._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="news[title]" placeholder="Tytuł" value='<%=news.title%>'>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="news[imgUrl]" placeholder="URL obrazka" value='<%=news.imgUrl%>'>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="news[date]" placeholder="data" value='<%=news.date%>'>
                    </div>
                    <div class="form-group">
                        <textarea name="news[text]" rows="25" class="form-control"><%=news.text%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Zatwierdź</button>
                    </div>
                </form>
            </div>
            
        </div>
        
        
        
        <div class="row">
            <a href="/edit/aktualnosci">Powrót</a>
        </div>
    
</div>