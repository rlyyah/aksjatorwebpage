<% include ../../partials/bootstrap %>



<div class="container">
        <div class="row ">
            <div class="col-12 text-center">
                <h2>DODAJ Zdjęcie Główne</h2>
            </div>
        </div>
        <div class="row">
            <div class="form-styler mt-3">
                <form action="/edit/zdj" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="zdj" placeholder="URL">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Zatwierdź</button>
                    </div>
                </form>
            </div>
            
        </div>
        <div class="row">
            <a href="/edit">Powrót</a>
        </div>
        
        <div class='row'>
            <% zdj.mainPhotos.forEach((url, index)=>{%>
            <form action='/edit/zdj/<%=index%>?_method=DELETE' method='POST'>
                <input type="hidden" name="index" value="<%=index%>">
                <p><img src='<%=url%>' width='50px' class='mr-2'></p>
                <button>X</button>
            </form>
                
            <% }); %>
        </div>
            
</div>