<% include ../../partials/bootstrap %>



<div class="container">
        <div class="row ">
            <div class="col-12 text-center">
                <h2>DODAJ Konferencje</h2>
            </div>
        </div>
        <div class="row">
            <div class="form-styler mt-3">
                <form action="/edit/konferencje" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="pnaukowe[title]" placeholder="Tytuł">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="pnaukowe[imgUrl]" placeholder="URL obrazka">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="pnaukowe[date]" placeholder="data">
                    </div>
                    <div class="form-group">
                        <textarea name="pnaukowe[text]" rows="25" class="form-control">Tekst</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Zatwierdź</button>
                    </div>
                </form>
            </div>
            
        </div>
        <div class='row'>
            <%pnaukowe.slice().reverse().forEach((item)=>{%>
            <form action='/edit/konferencje/<%=item._id%>?_method=DELETE' method='POST'>
                <p><%=item.title%></p>
                <p><img width='200px' src='<%=item.imgUrl%>'></p>
                <button>usuń</button>
            </form>
            <form action='/edit/konferencje/zdjecia/<%=item._id%>' method='POST'>
                <input type='text' name='image' placeholder='imgurl'>
                <button>dodaj zdjęcie</button>
            </form>
            <% });%>
        </div>
        
        
        
        <div class="row">
            <a href="/edit">Powrót</a>
        </div>
    
</div>